{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File (Poetry)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${poetry env info --path}"
            }
        },
        {
            "name": "Python: Current File (pip)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
    ]
}
